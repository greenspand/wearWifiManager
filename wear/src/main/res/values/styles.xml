<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppWearTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="android:windowSwipeToDismiss">false</item>-->
    </style>


    <style name="TVRecycleRowSmall" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:focusable">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TVRecycleRowMedium" parent="TVRecycleRowSmall">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="TVRecycleRowLarge" parent="TVRecycleRowSmall">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <style name="TVRecycleRowBrightnessSmall" parent="TVRecycleRowSmall">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TVRecycleRowBrightnessMedium" parent="TVRecycleRowBrightnessSmall">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TVRecycleRowBrightnessLarge" parent="TVRecycleRowBrightnessSmall">
        <item name="android:textSize">30sp</item>
    </style>
</resources>
